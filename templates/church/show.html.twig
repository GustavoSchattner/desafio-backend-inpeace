{% extends 'base.html.twig' %}

{% block title %}{{ church.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="mb-5">
                        <h1 class="h2 fw-bold mb-1">
                            <i class="bi bi-church text-primary"></i> {{ church.name }}
                        </h1>
                        <p class="text-muted small">ID #{{ church.id }}</p>
                    </div>

                    {% if church.image %}
                        <div class="mb-4 text-center">
                            <img src="{{ asset('uploads/churches/' ~ church.image) }}"
                                 alt="{{ church.name }}"
                                 class="img-fluid rounded"
                                 style="max-height: 400px; object-fit: cover; width: 100%;">
                        </div>
                    {% endif %}

                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="small text-muted fw-bold text-uppercase mb-1">Endereço</div>
                            <div class="text-dark">{{ church.address }}</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="small text-muted fw-bold text-uppercase mb-1">Website</div>
                            <div class="text-dark">
                                {% if church.website %}
                                    <a href="{{ church.website }}" target="_blank" class="text-primary text-decoration-none">
                                        {{ church.website }} <i class="bi bi-box-arrow-up-right"></i>
                                    </a>
                                {% else %}
                                    <span class="text-muted">Não informado</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if church.members|length > 0 %}
                        <div class="mb-4 p-3 bg-light rounded">
                            <div class="small text-muted fw-bold text-uppercase mb-2">Membros</div>
                            <div class="text-dark">
                                <span class="badge bg-info">{{ church.members|length }} membro{{ church.members|length > 1 ? 's' : '' }}</span>
                            </div>
                        </div>
                    {% endif %}

                    <div class="d-flex gap-2 mt-5 pt-4 border-top">
                        <a href="{{ path('app_church_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <a href="{{ path('app_church_edit', {'id': church.id}) }}" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>

                        {{ include('church/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
