{% extends 'base.html.twig' %}

{% block title %}Igrejas{% endblock %}

{% block body %}
<div class="container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 fw-bold mb-1">
                    <i class="bi bi-church text-primary"></i> Igrejas Cadastradas
                </h1>
                <p class="text-muted small">Gerenciamento de igrejas da comunidade</p>
            </div>
            <a href="{{ path('app_church_new') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-lg"></i> Nova Igreja
            </a>
        </div>

        {% if pagination|length > 0 %}
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light border-bottom-2">
                                <tr>
                                    <th style="width: 60px;">Imagem</th>
                                    <th>Nome</th>
                                    <th>Endereço</th>
                                    <th class="text-center" style="width: 120px;">Membros</th>
                                    <th class="text-end" style="width: 140px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for church in pagination %}
                                    <tr>
                                        <td>
                                            {% if church.image %}
                                                <img src="{{ asset('uploads/churches/' ~ church.image) }}"
                                                     class="rounded"
                                                     style="width: 50px; height: 50px; object-fit: cover;">
                                            {% else %}
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <strong class="text-dark">{{ church.name }}</strong>
                                        </td>
                                        <td>
                                            <span class="text-muted">{{ church.address }}</span>
                                        </td>
                                        <td class="text-center">
                                            {% if church.members|length > 0 %}
                                                <span class="badge bg-info">{{ church.members|length }}</span>
                                            {% else %}
                                                <span class="text-muted small">—</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('app_church_show', {'id': church.id}) }}"
                                                   class="btn btn-outline-info"
                                                   title="Ver detalhes">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_church_edit', {'id': church.id}) }}"
                                                   class="btn btn-outline-warning"
                                                   title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn btn-outline-danger js-delete-btn"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteModal"
                                                        data-id="{{ church.id }}"
                                                        data-name="{{ church.name }}"
                                                        data-members-count="{{ church.members|length }}"
                                                        data-url="{{ path('app_church_delete', {'id': church.id}) }}"
                                                        title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="text-muted small">
                    Exibindo {{ pagination|length }} de {{ pagination.getTotalItemCount }} registros
                </div>
                <nav class="d-flex justify-content-center">
                    {{ knp_pagination_render(pagination) }}
                </nav>
            </div>
        {% else %}
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-inbox display-4"></i>
                <p class="mt-3 mb-0">Nenhuma igreja cadastrada. <a href="{{ path('app_church_new') }}" class="alert-link">Crie uma agora</a></p>
            </div>
        {% endif %}
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content border-0">
                <div class="modal-header bg-danger bg-opacity-10 border-danger">
                    <h5 class="modal-title fw-bold text-danger">
                        <i class="bi bi-exclamation-triangle"></i> Excluir Igreja
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" id="deleteForm">
                    <div class="modal-body py-4">
                        <p>Você tem certeza que deseja remover a igreja: <strong id="modalChurchName">...</strong>?</p>

                        <div id="modalMemberWarning" class="alert alert-warning d-none mt-3">
                            <i class="bi bi-exclamation-circle"></i> Esta igreja possui <strong id="modalMemberCount">0</strong> membros vinculados.
                            <div class="mt-3">
                                <label class="form-label small fw-bold">O que fazer com eles?</label>
                                <select name="move_to_church" id="targetChurchSelect" class="form-select form-select-sm">
                                    <option value="">Deixar sem igreja</option>
                                    <option value="cascade_delete" class="text-danger fw-bold">Excluir membros também</option>
                                    {% for c in allChurches %}
                                        <option value="{{ c.id }}">{{ c.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <input type="hidden" name="_token" value="{{ csrf_token('delete_generic') }}">
                    </div>
                    <div class="modal-footer border-top">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_scripts %}
<script>
    function initDeleteModal() {
        const deleteModalEl = document.getElementById('deleteModal');
        if (!deleteModalEl) return;

        deleteModalEl.removeEventListener('show.bs.modal', handleModalShow);
        deleteModalEl.addEventListener('show.bs.modal', handleModalShow);
    }

    function handleModalShow(event) {
        const button = event.relatedTarget;

        const url = button.getAttribute('data-url');
        const name = button.getAttribute('data-name');
        const currentChurchId = button.getAttribute('data-id');
        const members = parseInt(button.getAttribute('data-members-count') || 0);

        const modalTitle = document.getElementById('modalChurchName');
        const modalMemberCount = document.getElementById('modalMemberCount');
        const warningBlock = document.getElementById('modalMemberWarning');
        const form = document.getElementById('deleteForm');
        const targetSelect = document.getElementById('targetChurchSelect');

        form.action = url;
        modalTitle.textContent = name;
        targetSelect.value = '';

        Array.from(targetSelect.options).forEach(option => {
            if (option.value === currentChurchId) {
                option.hidden = true;
                option.disabled = true;
            } else {
                option.hidden = false;
                option.disabled = false;
            }
        });

        if (members > 0) {
            modalMemberCount.textContent = members;
            warningBlock.classList.remove('d-none');
        } else {
            warningBlock.classList.add('d-none');
        }
    }

    document.addEventListener('turbo:load', initDeleteModal);
    document.addEventListener('DOMContentLoaded', initDeleteModal);
</script>
{% endblock %}
