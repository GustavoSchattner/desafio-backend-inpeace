{% extends 'base.html.twig' %}

{% block title %}Listagem de Igrejas{% endblock %}

{% block body %}
    <div class="container mt-4">
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Igrejas Cadastradas</h1>
            <a href="{{ path('app_church_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Nova Igreja
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Imagem</th>
                            <th>Nome</th>
                            <th>Endereço</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for church in pagination %}
                        <tr>
                            <td>{{ church.id }}</td>
                            <td>
                                {% if church.image %}
                                    <img src="{{ asset('uploads/churches/' ~ church.image) }}" class="rounded-circle border" style="width: 40px; height: 40px; object-fit: cover;">
                                {% else %}
                                    <span class="badge bg-secondary">Sem img</span>
                                {% endif %}
                            </td>
                            <td>
                                <strong>{{ church.name }}</strong>
                                {% if church.members|length > 0 %}
                                    <span class="badge bg-info text-dark ms-2" title="Membros">{{ church.members|length }} membros</span>
                                {% endif %}
                            </td>
                            <td>{{ church.address }}</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="{{ path('app_church_show', {'id': church.id}) }}" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('app_church_edit', {'id': church.id}) }}" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil"></i></a>                                
                                    
                                    <button type="button" 
                                            class="btn btn-sm btn-danger js-delete-btn"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal"
                                            data-id="{{ church.id }}"
                                            data-name="{{ church.name }}"
                                            data-members-count="{{ church.members|length }}" 
                                            data-url="{{ path('app_church_delete', {'id': church.id}) }}">
                                            Excluir
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="5" class="text-center py-4 text-muted">Nenhum registro encontrado.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>

        <div class="text-center text-muted small">
            Total de registros: {{ pagination.getTotalItemCount }}
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Excluir Igreja</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" id="deleteForm">
                    <div class="modal-body">
                        <p>Você tem certeza que deseja remover a igreja: <strong id="modalChurchName">...</strong>?</p>
                        
                        <div id="modalMemberWarning" class="alert alert-warning d-none">
                            <i class="bi bi-exclamation-triangle"></i>
                            Esta igreja possui <strong id="modalMemberCount">0</strong> membros vinculados.
                            <div class="mt-3">
                                <label class="form-label">O que fazer com eles?</label>
                                <select name="move_to_church" id="targetChurchSelect" class="form-select">
                                    <option value="">Deixar sem igreja</option>
                                    <option value="cascade_delete" class="text-danger fw-bold">
                                          Excluir membros também (Cascata)
                                    </option>
                                    {% for c in allChurches %}
                                        <option value="{{ c.id }}" class="church-option">{{ c.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_generic') }}">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Sim, Excluir</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_scripts %}
<script>
    function initDeleteModal() {
        const deleteModalEl = document.getElementById('deleteModal');
        if (!deleteModalEl) return;

        deleteModalEl.removeEventListener('show.bs.modal', handleModalShow);
        deleteModalEl.addEventListener('show.bs.modal', handleModalShow);
    }

    function handleModalShow(event) {
        const button = event.relatedTarget;
        
        const url = button.getAttribute('data-url');
        const name = button.getAttribute('data-name');
        const currentChurchId = button.getAttribute('data-id'); 
        const members = parseInt(button.getAttribute('data-members-count') || 0);

        const modalTitle = document.getElementById('modalChurchName');
        const modalMemberCount = document.getElementById('modalMemberCount');
        const warningBlock = document.getElementById('modalMemberWarning');
        const form = document.getElementById('deleteForm');
        
        const targetSelect = document.getElementById('targetChurchSelect');

        form.action = url;
        modalTitle.textContent = name;
        
        targetSelect.value = "";

        Array.from(targetSelect.options).forEach(option => {
            if (option.value === currentChurchId) {
                option.hidden = true;
                option.disabled = true;
            } else {
                option.hidden = false;
                option.disabled = false;
            }
        });
        
        if (members > 0) {
            modalMemberCount.textContent = members;
            warningBlock.classList.remove('d-none');
        } else {
            warningBlock.classList.add('d-none');
        }
    }

    document.addEventListener('turbo:load', initDeleteModal);
    document.addEventListener('DOMContentLoaded', initDeleteModal);
</script>
{% endblock %}