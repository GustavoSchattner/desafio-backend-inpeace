{% extends 'base.html.twig' %}

{% block title %}Listagem de Igrejas{% endblock %}

{% block body %}
    <div class="container mt-4">
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Igrejas Cadastradas</h1>
            <a href="{{ path('app_church_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Nova Igreja
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Imagem</th>
                            <th>Nome</th>
                            <th>Endereço</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for church in churches %}
                        <tr>
                            <td>{{ church.id }}</td>
                            <td>
                                {% if church.image %}
                                    <img src="{{ asset('uploads/churches/' ~ church.image) }}" class="rounded-circle border" style="width: 40px; height: 40px; object-fit: cover;">
                                {% else %}
                                    <span class="badge bg-secondary">Sem img</span>
                                {% endif %}
                            </td>
                            <td>
                                <strong>{{ church.name }}</strong>
                                {% if church.members|length > 0 %}
                                    <span class="badge bg-info text-dark ms-2" title="Membros">{{ church.members|length }} membros</span>
                                {% endif %}
                            </td>
                            <td>{{ church.address }}</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="{{ path('app_church_show', {'id': church.id}) }}" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('app_church_edit', {'id': church.id}) }}" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil"></i></a>
                                    
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal"
                                            data-url="{{ path('app_church_delete_complex', {'id': church.id}) }}"
                                            data-name="{{ church.name }}"
                                            data-members="{{ church.members|length }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="5" class="text-center py-4 text-muted">Nenhum registro encontrado.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" id="deleteForm">
                    
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill"></i> Exclusir Igreja</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    
                    <div class="modal-body">
                        <p class="lead">Você vai remover a igreja: <strong id="modalChurchName"></strong></p>
                        
                        <div id="hasMembersBlock" class="d-none">
                            <div class="alert alert-warning border-warning">
                                <h6 class="alert-heading fw-bold">Atenção!</h6>
                                <p class="mb-0">Existem <strong id="modalMemberCount"></strong> membros nesta igreja.</p>
                                <hr>
                                <p class="mb-0 small">O que deseja fazer com eles?</p>
                            </div>

                            <div class="d-grid gap-2">
                                <div class="form-check border p-3 rounded mb-2 shadow-sm">
                                    <input class="form-check-input" type="radio" name="delete_action" value="orphans" checked>
                                    <label class="form-check-label w-100">
                                        <strong><i class="bi bi-people"></i> Manter membros (Despatriar)</strong>
                                        <div class="text-muted small mt-1">Os membros continuam no sistema, sem vínculo.</div>
                                    </label>
                                </div>
                                <div class="form-check border p-3 rounded bg-light">
                                    <input class="form-check-input" type="radio" name="delete_action" value="cascade">
                                    <label class="form-check-label text-danger w-100">
                                        <strong><i class="bi bi-trash-fill"></i> Apagar membros também</strong>
                                        <div class="text-muted small mt-1">A igreja e TODOS os membros serão apagados.</div>
                                    </label>
                                </div>
                            </div>
                        </div>


                        <div id="noMembersBlock" class="d-none">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> Não há membros vinculados. Exclusão segura.
                            </div>
                            <input type="hidden" name="delete_action" value="cascade">
                        </div>

                        <input type="hidden" name="_token" value="{{ csrf_token('delete_generic') }}"> 
                    </div>
                    
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_scripts %}
<script>
    const deleteModal = document.getElementById('deleteModal')
    deleteModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget
        
        const url = button.getAttribute('data-url')
        const name = button.getAttribute('data-name')
        const members = parseInt(button.getAttribute('data-members'))

        const modalTitle = document.getElementById('modalChurchName')
        const modalMemberCount = document.getElementById('modalMemberCount')
        const hasMembersBlock = document.getElementById('hasMembersBlock')
        const noMembersBlock = document.getElementById('noMembersBlock')
        const form = document.getElementById('deleteForm')

        form.action = url
        modalTitle.textContent = name
        modalMemberCount.textContent = members

        if (members > 0) {
            hasMembersBlock.classList.remove('d-none')
            noMembersBlock.classList.add('d-none')
            const hiddenInput = noMembersBlock.querySelector('input');
            if(hiddenInput) hiddenInput.disabled = true;
        } else {
            hasMembersBlock.classList.add('d-none')
            noMembersBlock.classList.remove('d-none')
            const hiddenInput = noMembersBlock.querySelector('input');
            if(hiddenInput) hiddenInput.disabled = false;
        }
    })
</script>
{% endblock %}