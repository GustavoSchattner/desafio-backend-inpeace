{% extends 'base.html.twig' %}

{% block title %}Editar Membro{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <h1 class="h2 fw-bold mb-2">
                    <i class="bi bi-person-fill text-success"></i> Editar Membro
                </h1>
                <p class="text-muted">Atualize as informações do membro abaixo.</p>
            </div>

            {{ include('member/_form.html.twig', {'button_label': 'Atualizar'}) }}

            <div class="mt-5 pt-4 border-top">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_member_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar para a lista
                    </a>

                    {{ include('member/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
