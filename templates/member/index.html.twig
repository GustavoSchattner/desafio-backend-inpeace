{% extends 'base.html.twig' %}

{% block title %}Membros{% endblock %}

{% block body %}
<div class="container">
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 fw-bold mb-1">
                    <i class="bi bi-people text-success"></i> Membros da Comunidade
                </h1>
                <p class="text-muted small">Gerenciamento de membros cadastrados</p>
            </div>
            <a href="{{ path('app_member_new') }}" class="btn btn-success btn-lg">
                <i class="bi bi-plus-lg"></i> Novo Membro
            </a>
        </div>

        {% if pagination|length > 0 %}
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light border-bottom-2">
                                <tr>
                                    <th>Nome</th>
                                    <th style="width: 140px;">CPF</th>
                                    <th>Email</th>
                                    <th>Localização</th>
                                    <th>Igreja</th>
                                    <th class="text-end" style="width: 100px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for member in pagination %}
                                    <tr>
                                        <td>
                                            <strong class="text-dark">{{ member.name }}</strong>
                                        </td>
                                        <td>
                                            <span class="text-muted font-monospace small">{{ member.cpf }}</span>
                                        </td>
                                        <td>
                                            {% if member.email %}
                                                <a href="mailto:{{ member.email }}" class="text-primary text-decoration-none">{{ member.email }}</a>
                                            {% else %}
                                                <span class="text-muted">—</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="text-muted small">{{ member.city }}, {{ member.state }}</span>
                                        </td>
                                        <td>
                                            {% if member.church %}
                                                <span class="badge bg-primary">{{ member.church.name }}</span>
                                            {% else %}
                                                <span class="badge bg-warning text-dark">Sem Igreja</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('app_member_show', {'id': member.id}) }}"
                                                   class="btn btn-outline-info"
                                                   title="Ver detalhes">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_member_edit', {'id': member.id}) }}"
                                                   class="btn btn-outline-warning"
                                                   title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="text-muted small">
                    Exibindo {{ pagination|length }} de {{ pagination.getTotalItemCount }} registros
                </div>
                <nav class="d-flex justify-content-center">
                    {{ knp_pagination_render(pagination) }}
                </nav>
            </div>
        {% else %}
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-inbox display-4"></i>
                <p class="mt-3 mb-0">Nenhum membro cadastrado. <a href="{{ path('app_member_new') }}" class="alert-link">Crie um agora</a></p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
