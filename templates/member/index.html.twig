{% extends 'base.html.twig' %}

{% block title %}Listagem de Membros{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Listagem de Membros</h1>

        <a href="{{ path('app_member_new') }}" class="btn btn-primary">
            Criar Novo Membro
        </a>
    </div>

    <div class="alert alert-secondary">
        Total de membros: <strong>{{ pagination.getTotalItemCount }}</strong>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Email</th>
                    <th>Cidade</th>
                    <th>Igreja</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for member in pagination %}
                <tr>
                    <td>{{ member.id }}</td>
                    <td>{{ member.name }}</td>
                    <td>{{ member.cpf }}</td>
                    <td>{{ member.email }}</td>
                    <td>{{ member.city }} - {{ member.state }}</td>
                    <td>
                        {% if member.church %}
                            {{ member.church.name }}
                        {% else %}
                            <span class="badge bg-warning text-dark">Sem Igreja</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_member_show', {'id': member.id}) }}" class="btn btn-sm btn-info">Ver</a>
                        <a href="{{ path('app_member_edit', {'id': member.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Nenhum registro encontrado</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}