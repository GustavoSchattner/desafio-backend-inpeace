{% extends 'base.html.twig' %}

{% block title %}Listagem de Membros{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Membros</h1>
            <a href="{{ path('app_member_new') }}" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Novo Membro
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Igreja</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for member in pagination %}
                        <tr>
                            <td>{{ member.id }}</td>
                            <td><strong>{{ member.name }}</strong></td>
                            <td>{{ member.cpf }}</td>
                            <td>{{ member.email }}</td>
                            <td>{{ member.phone }}</td>
                            <td>
                                {% if member.church %}
                                    <span class="badge bg-primary">{{ member.church.name }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">Sem Igreja</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="{{ path('app_member_show', {'id': member.id}) }}" class="btn btn-sm btn-outline-info" title="Ver"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('app_member_edit', {'id': member.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">Nenhum membro encontrado.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
        
        <div class="text-center text-muted small pb-4">
            Total de membros: {{ pagination.getTotalItemCount }}
        </div>
    </div>
{% endblock %}